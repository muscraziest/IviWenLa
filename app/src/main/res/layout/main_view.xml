<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom|center">

    <TextView
        android:id="@+id/vivi_message"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:text="Bienvenido!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <Switch
            android:id="@+id/switch_techo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:layout_marginTop="51dp"
            android:checked="false"
            android:text="@string/luces_techo"
            android:textOff="Apagadas"
            android:textOn="Encendidas"
            android:visibility="invisible" />


        <Switch
            android:id="@+id/switch_lectura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:text="@string/luz_lectura"
            android:textOff="Apagada"
            android:textOn="Encendida"
            android:visibility="invisible" />


        <Switch
            android:id="@+id/switch_regulable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:text="@string/luz_regulable"
            android:textOff="Apagada"
            android:textOn="Encendida"
            android:visibility="invisible" />

        <Switch
            android:id="@+id/switch_puerta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:text="@string/puerta"
            android:textOff="Cerrada"
            android:textOn="Abierta"
            android:visibility="invisible" />

        <Button
            android:id="@+id/state_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar estado" />

        <Button
            android:id="@+id/settings_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar estado" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/speech_btn"
        android:layout_width="126dp"
        android:layout_height="129dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        app:srcCompat="@android:drawable/ic_btn_speak_now" />

    <TextView
        android:id="@+id/btn_speech_msg"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Pulsa para hablar" />

</RelativeLayout>